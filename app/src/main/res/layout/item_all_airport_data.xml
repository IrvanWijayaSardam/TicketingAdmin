<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llLocationChooseAllAirport"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ivIconAirplaneItemChooseFragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13999999">

        <TextView
            android:id="@+id/tvCityCountryItemChooseAllAirport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="Jakarta (JKT), Indonesia"
            android:textColor="@color/primary_blue_1" />

        <TextView
            android:id="@+id/tvAirportItemChooseAllAirport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingStart="10dp"
            android:text="Soekarno Hatta International Airport" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_font_color"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnUpdateFallAirport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:text="Update" />

            <Button
                android:id="@+id/btnDeleteFallAirport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Delete" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivIconAirplaneItemChooseFragment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_airplane"
        app:layout_constraintLeft_toRightOf="@+id/llLocationChooseAllAirport"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toLeftOf="@+id/llAirportCodeItemChooseAirport"
        />
    <LinearLayout
        android:id="@+id/llAirportCodeItemChooseAirport"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/primary_blue_1"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tvAirportCodeItemChooseAirport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YIA"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/background_color_white"
            android:textSize="15sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>