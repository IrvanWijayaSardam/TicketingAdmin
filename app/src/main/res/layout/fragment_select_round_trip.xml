<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color_white"
    app:cardElevation="7dp"
    app:cardCornerRadius="10dp"
    tools:context=".view.ui.flight.SelectRoundTripFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/llDepartureDateFragmentRoundTrip"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/vVerticalLinedFragmentRoundTrip"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tvTitleDepartureDateFragmentRoundTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/departure_date"
                android:textAlignment="center"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/primary_font_color"/>
            <TextView
                android:id="@+id/tvDateDepartureDateFragmentRoundTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Day, xx Mont xxxx"
                android:textAlignment="center"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/primary_blue_1"/>

        </LinearLayout>
        <View
            android:id="@+id/vVerticalLinedFragmentRoundTrip"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/secondary_font_color"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:id="@+id/llReturnDateFragmentRoundTrip"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/vVerticalLinedFragmentRoundTrip"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tvTitleReturnDateFragmentRoundTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/return_date"
                android:textAlignment="center"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/primary_font_color"/>
            <TextView
                android:id="@+id/tvDateReturnDateFragmentRoundTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Day, xx Mont xxxx"
                android:textAlignment="center"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/primary_blue_1"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>