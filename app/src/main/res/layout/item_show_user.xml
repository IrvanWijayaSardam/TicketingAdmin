<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/userIcon"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/user"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/txtNameUser"
            android:fontFamily="@font/poppins_medium"
            android:text="Name: "
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:layout_toEndOf="@+id/userIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtEmailUser"
            android:layout_below="@+id/txtNameUser"
            android:fontFamily="@font/poppins_medium"
            android:text="Email: "
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:layout_toEndOf="@+id/userIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtGenderUser"
            android:layout_below="@+id/txtEmailUser"
            android:fontFamily="@font/poppins_medium"
            android:text="Gender: "
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:layout_toEndOf="@+id/userIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtPassUser"
            android:layout_below="@+id/txtGenderUser"
            android:fontFamily="@font/poppins_medium"
            android:text="Password: "
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:layout_toEndOf="@+id/userIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtAddressUser"
            android:layout_below="@+id/txtPassUser"
            android:fontFamily="@font/poppins_medium"
            android:text="Address: "
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:layout_toEndOf="@+id/userIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnUpdateUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAddressUser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:text="@string/update" />
        <Button
            android:layout_marginStart="10dp"
            android:id="@+id/btnDeleteUser"
            android:text="@string/delete"
            android:backgroundTint="#910000"
            android:layout_marginTop="90dp"
            android:layout_below="@id/txtAddressUser"
            android:layout_toEndOf="@+id/btnUpdateUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>