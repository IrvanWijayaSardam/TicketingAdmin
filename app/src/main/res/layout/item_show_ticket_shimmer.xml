<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="7dp"
    app:cardCornerRadius="10dp"
    android:background="@color/primary_font_color"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_font_color"
        >
        <LinearLayout
                android:id="@+id/llMoreInfoFragmentShowTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="end"
                android:background="@color/primary_font_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >
                <TextView
                    android:id="@+id/tvMoreInfoFragmentShowTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Save up to IDR 3,800 for Roundtrip"
                    android:textAlignment="textEnd"
                    android:textSize="12sp"
                    android:background="#696A6E"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="#696A6E"
                    />
            </LinearLayout>
        <ImageView
                android:id="@+id/ivLogoShowTicketFragmentShowTicket"
                android:layout_width="70dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/llMoreInfoFragmentShowTicket"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="1"
                android:background="#696A6E"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                />
        <TextView
                android:id="@+id/tvNameClassFixTicketFragmentShowTicket"
                android:layout_width="130dp"
                android:background="#696A6E"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/llMoreInfoFragmentShowTicket"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="15sp"
                />
        <TableLayout
                android:id="@+id/tlInformationFlightOneFragmentShowTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivLogoShowTicketFragmentShowTicket"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/flight_no"
                        android:textColor="#696A6E"
                        android:background="#696A6E"
                        android:fontFamily="@font/poppins"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dep Time"
                        android:textColor="#696A6E"
                        android:background="#696A6E"
                        android:fontFamily="@font/poppins"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Arr Time"
                        android:fontFamily="@font/poppins"
                        android:textColor="#696A6E"
                        android:background="#696A6E"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/tvFlightNumberItemShowTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GA209"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/primary_font_color"
                        />
                    <TextView
                        android:id="@+id/tvDepTimeItemShowTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="16:59"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/primary_font_color"
                        />
                    <TextView
                        android:id="@+id/tvArrTimeItemShowTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="07:30"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/primary_font_color"
                        />
                </TableRow>
            </TableLayout>
        <LinearLayout
                android:id="@+id/llInformationFlightTwoFramgmentShowTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tlInformationFlightOneFragmentShowTicket"
                >
                <TextView
                    android:id="@+id/tvInformationLongTimeFlightFragmentShowTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information Long Time Flight"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp"
                    android:textColor="#696A6E"
                    android:background="#696A6E"
                    />
                <TextView
                    android:id="@+id/tvCountSeatsFragmentShowTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Count Seats"
                    android:fontFamily="@font/poppins"
                    android:textColor="#696A6E"
                    android:background="#696A6E"
                    />
            </LinearLayout>

        <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llInformationFlightTwoFramgmentShowTicket">


            </TableLayout>

        <View
                android:id="@+id/vVerticalLinedCvShowTicket"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:background="@color/secondary_font_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tableLayout"
                app:layout_constraintTop_toBottomOf="@+id/tlInformationFlightOneFragmentShowTicket"
                app:layout_constraintHorizontal_bias="0.05"
                />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                app:layout_constraintBottom_toTopOf="@+id/ivAddBackPackCvShowTicket"
                app:layout_constraintLeft_toRightOf="@+id/vVerticalLinedCvShowTicket"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tlInformationFlightOneFragmentShowTicket">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price/Pax"
                    android:textColor="#696A6E"
                    android:background="#696A6E"
                    android:fontFamily="@font/poppins"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tvPriceItemShowTicket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IDR x,xxx.xxx"
                    android:textColor="#696A6E"
                    android:background="#696A6E"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Earn Miles"
                    android:textColor="#696A6E"
                    android:background="#696A6E"
                    android:fontFamily="@font/poppins"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XXX Miles"
                    android:textColor="#696A6E"
                    android:background="#696A6E"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Excess Baggage"
                    android:textColor="#696A6E"
                    android:background="#696A6E"
                    android:fontFamily="@font/poppins"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price per KG"
                    android:textColor="#696A6E"
                    android:background="#696A6E"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IDR x,xxx.xxx"
                    android:textColor="#696A6E"
                    android:background="#696A6E"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>
        <ImageView
                android:id="@+id/ivAddBackPackCvShowTicket"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#696A6E"
            />
        <View
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginBottom="5dp"
                android:background="@color/secondary_font_color"
                app:layout_constraintRight_toLeftOf="@id/vVerticalLinedCvShowTicket"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tvMoreDetailsCvShowTicket"
                />
        <TextView
                android:id="@+id/tvMoreDetailsCvShowTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More Details"
                android:gravity="center_vertical"
                android:layout_margin="7dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12sp"
                android:textColor="#696A6E"
                android:background="#696A6E"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>